<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Chatroom</h1>
    <div class="col-6 offset-3">
        <form action="/chatrooms/<%=chatroom._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="chatroom[title]"
                    value="<%=chatroom.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="chatroom[image]"
                    value="<%=chatroom.image %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="chatroom[description]"
                    required><%= chatroom.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Chatroom</button>
            </div>
        </form>
        <a href="/chatrooms/<%= chatroom._id%>">Back To Chatrooms</a>

    </div>
</div>