<% layout('layouts/boilerplate')%>

<h1>All Chatrooms</h1>
<div>
    <a href="/chatrooms/new">Add Chatroom</a>
</div>
<% for (let chatroom of chatrooms){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=chatroom.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= chatroom.title %> </h5>
                <p class="card-text"><%= chatroom.description %></p>
                <a class="btn btn-primary" href="/chatrooms/<%=chatroom._id%>">View <%=chatroom.title%> Chatroom</a>
            </div>
        </div>
    </div>
</div>
<% }%>